html
   head
    meta(charset='utf-8')
    title Welcome to my website!
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='A cool thing made with Glitch')
    link#favicon(rel='icon', href='/images/favicon-96x96.png', type='image/png')
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
   body
      header
       nav.navbar.navbar-expand-lg.navbar-light.bg-light
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/library') Home 
          li.nav-item.active
            a.nav-link(href='/books/viewReturnBook') Sách đã được trả
          li.nav-item.active
            a.nav-link(href='') Sách đã được mượn
          form.form-inline.mt-0(action='', method='GET')
            input.form-control.mr-sm-2(type='search', name='q', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
        ul.navbar-nav.ml-auto
          li
            if reader
             p.nav-link(href='#')= reader.nameUser
          li
            if !reader
             a.btn.btn-primary(href='/auth/login') Login
          li 
            a.btn.btn-outline-success(href='/logout') Log out
      main
        h2.text-center Thông tin sách và độc giả đã mượn sách
        table.table
         thead.thead-dark
          tr
            th Mã Độc Giả
            th Tên độc giả
            th Mã Sách
            th Tên Sách
            th Tác Giả
            th Thể Loại
            th Ngày Mượn
            th Hạn Trả
          each borrow in borrows
            tr
              td= borrow.readerId
              td= borrow.nameUser
              td= borrow.bookId
              td= borrow.name
              td= borrow.author
              td= borrow.kind
              td= borrow.ngayMuon
              td= borrow.ngayTra