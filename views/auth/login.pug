link(rel='stylesheet' type='text/css' href="/stylesheets/styleLogin.css")
link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
head
  meta(charset='utf-8')
  title Login
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link#favicon(rel='icon', href='/images/img_lights.jpg', type='image/jpg')
main
  if errors
    each error in errors
      .alert.alert-danger= error
  h2 Oh hi,
  p Login: 
  form(method="POST")
    label ID
      input(name='readerId', type='text', maxlength='100', value=values ? values.readerId : "")
    label Password
      input(name='password', type='password', maxlength='100', value=values ? values.password : "")
    button#submit-dream(type='submit') Login