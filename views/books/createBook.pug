extends ../layouts/common
block content
	if errors
		each error in errors
			.alert.alert-danger= error
	h2.text-center Create New Book
	.container.mt-3
		form(action="/books/createBook", method="POST", enctype="multipart/form-data")
			.form-group.col-md-6
				label Name of book
				input.form-control(name='name', type='text', maxlength='100', value=values ? values.name : "")

			.form-group.col-md-6
				label Quantity
				input.form-control(name='quantity', type='text', maxlength='100', value=values ? values.quantity : "")

			.form-group.col-md-6
				label Author
				input.form-control(name='author', type='text', maxlength='100', value=values ? values.author : "")

			.form-group.col-md-6
				label Publishing Year 
				input.form-control(name='publishingYear', type='date', maxlength='100', value=values ? values.publishingYear : "")

			.form-group.col-md-6
				label Kind of book
				input.form-control(name='kind', type='text', maxlength='100', value=values ? values.kind : "")

			.form-group.col-md-6
				label Date add book
				input.form-control(name='address', type='text', maxlength='100', value=values ? values.address : "")

			.form-group.col-md-6
				label Picture
				input.form-control-file(name='picture', type='file', maxlength='100', value=values ? values.picture : "")

				br

				button.btn.btn-primary(type='submit') Add Book