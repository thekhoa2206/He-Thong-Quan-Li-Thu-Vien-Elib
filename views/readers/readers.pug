   body
      header
       nav.navbar.navbar-expand-lg.navbar-light.bg-light
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='') Reader
          li.nav-item
            a.nav-link(href='') Book
          li.nav-item.active
            a.nav-link(href='') Home 
          form.form-inline.mt-0(action='', method='GET')
            input.form-control.mr-sm-2(type='search', name='q', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
          li.nav-item.active.col-md-3
            a.nav.btn.btn-outline-success.my-2.my-sm-0(href='/readers/createReader') Add new Reader 
        ul.navbar-nav.ml-auto
          li
            if reader
             p.nav-link(href='#')= reader.name
          li
            if !reader
             a.btn.btn-primary(href='/auth/login') Login
          li 
            a.btn.btn-outline-success(href='/logout') Log out
      main
        h2 Oh hi,
        table.table
         thead.thead-dark
          tr
            th ID
            th Tên
            th Ngày Sinh
            th Giới Tính
            th
            th 
            th
            th
          each reader in readers
            tr 
              td= reader.readerId
              td= reader.name
              td= reader.dateOfBirth
              td= reader.gender
              td
                a.btn.btn-outline-success(href='/readers/viewReader/'+reader.readerId) View
              td
                a.btn.btn-outline-primary(href='/readers/editReader/'+reader.readerId) Edit
              td
                a.btn.btn-outline-danger(href='/readers/deleteReader/'+reader.readerId) Delete
              td
                a.btn.btn-outline-success(href='') Add Time
